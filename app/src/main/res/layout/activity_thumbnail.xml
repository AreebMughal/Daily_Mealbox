<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:background="#f0e40c"
        android:gravity="center"
        android:text="Fast Food"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="openDetailActivity"
                    android:src="@drawable/img_deal_1" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:onClick="openDetailActivity"
                    android:src="@drawable/img_deal_2" />
            </LinearLayout>

            <ImageView
                android:id="@+id/pic3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="51dp"
                android:src="@drawable/img_deal_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageView
                android:id="@+id/pic4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="45dp"
                android:src="@drawable/img_deal_4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pic3"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />


            <ImageView
                android:id="@+id/pic5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_deal_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pic3" />

            <ImageView
                android:id="@+id/pic6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="45dp"
                android:src="@drawable/img_deal_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/pic5"
                app:layout_constraintTop_toBottomOf="@+id/pic4" />
        </LinearLayout>


    </ScrollView>


</LinearLayout>