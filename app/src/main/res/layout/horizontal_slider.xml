<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="fantasy"
            android:text="Fast Food"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="fantasy"
            android:gravity="right"
            android:onClick="openAll"
            android:text="See All"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imgview_1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/shape_border"
                android:onClick="openDetailActivity"
                android:padding="5dp"
                android:src="@drawable/img_deal_1"
                android:tag="img_deal_1" />

            <ImageView
                android:id="@+id/imgview_2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_border"
                android:onClick="openDetailActivity"
                android:padding="5dp"
                android:src="@drawable/img_deal_2"
                android:tag="img_deal_2" />

            <ImageView
                android:id="@+id/imgview_3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_border"
                android:onClick="openDetailActivity"
                android:src="@drawable/img_deal_3"
                android:tag="img_deal_3" />

            <ImageView
                android:id="@+id/imgview_4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_border"
                android:onClick="openDetailActivity"
                android:src="@drawable/img_deal_4"
                android:tag="img_deal_4" />

            <ImageView
                android:id="@+id/imgview_5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/shape_border"
                android:onClick="openDetailActivity"
                android:src="@drawable/img_deal_5"
                android:tag="img_deal_5" />
        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>